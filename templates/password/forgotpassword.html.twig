{% extends 'login.html.twig' %}

{% block title %}ECHKILI-Rénitialisation{% endblock %}

{% block body %}
<form action="{{path('forgotPassword')}}" method="post">
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <img src="{{asset('login/images/undraw_remotely_2j6y.svg')}}" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="col-lg-10 mx-auto">
            <div class="card mb-8">
              <div class="card-body">
                <div class="mb-4">
                  <h3>Mot de passe oublié</h3>
                </div>
                <div class="form-group row">
                  <label for="inputEmail" class="col-md-3 col-form-label">Votre email:</label>
                  <div class="col-md-9">
                    <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="offset-md-3 col-md-9">
                    <button class="btn btn-primary" type="submit">Envoyer</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}
