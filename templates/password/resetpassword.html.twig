{% extends 'login.html.twig' %}

{% block title %}ECHKILI-Rénitialisation{% endblock %}

{% block body %}
<form action="{{path('app_reset_password', {'token': token })}}" method="post">
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <img src="{{asset('login/images/undraw_remotely_2j6y.svg')}}" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="col-lg-10 mx-auto">
            <div class="card mb-8">
              <div class="card-body">
                <div class="mb-4">
                  <h3>Réinitialisation de mot de passe</h3>
                </div>
                <div class="form-group row">
                  <label for="inputEmail" class="col-md-3 col-form-label">Mot de passe:</label>
                  <div class="col-md-9">
                    <input type="password" name="password" id="inputEmail" class="form-control" autocomplete="email" placeholder="Mot de passe" required autofocus>
                  </div>
                </div>
                 <div class="form-group row">
                  <label for="inputEmail" class="col-md-3 col-form-label">Confirmer votre mot de passe:</label>
                  <div class="col-md-9">
                    <input type="password" name="password1" id="inputEmail" class="form-control" autocomplete="email" placeholder="Confirmer votre mot de passe" required autofocus>
                  </div>
                </div>
                                                        {% for message in app.flashes('success') %}
														<div class="alert alert-success m-t-20">
															{{ message }}
														</div>
													{% endfor %}
													{% for message in app.flashes('error') %}
														<div class="alert alert-danger m-t-20">
															{{ message }}
														</div>
													{% endfor %}
                <div class="form-group row">
                  <div class="offset-md-3 col-md-9">
                    <button class="btn btn-primary" type="submit">Envoyer</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}
