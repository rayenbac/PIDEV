
{% extends 'dashboard.html.twig' %}

{% block title %}{{ parent() }}-Medecins {% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block body %}


        <div class="col-xl-12 col-lg-7 ">
              <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Liste des rendez-vous </h6>
            
                </div>
                <div class="table-responsive">
                  <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                      <tr>
                         <th>ID</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>cause</th>
                        <th>dateRV</th>
                        <th>description</th>
                        <th>Medecin</th>

                      </tr>
                    </thead>
                    <tbody>
                     {% for liste in rv %}
                      <tr>
                    <td>{{ liste.id }}</td>
                    <td>
                    {{ liste.nom }}
                    </td>
                    <td>{{ liste.prenom }}</td>
                    <td>{{ liste.cause }}</td>
                  <td>{{ liste.dateRV | date }}</td> 
                    <td>{{ liste.description }}</td>
                     <td>{{ liste.Medecin.nom }}</td> 



              
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
 {% endblock %}
			{% block javascripts %}
				{{ parent() }}
			{% endblock %}