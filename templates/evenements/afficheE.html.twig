{% extends "base.html.twig" %}



{% block body %}
<section class="breadcrumb_part breadcrumb_bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumb_iner">
					<div class="breadcrumb_iner_item">
						<h2>Nos événements</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="blog_area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">

						{% for i in evenements %}
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <img width = "750px" height = "350px" class="card-img rounded-0" src="{{ asset('uploads/Evenements/' ~ i.Image) }}" alt="">
                                <a href="#" class="blog_item_date">
                                    <h3>{{i.dateevenement|date("m/d/Y")}}</h3>
                                    
                                </a>
                            </div>

                            <div class="blog_details">
								
                                <a>
										
                                <h2>{{i.nomevenement}}</h2>
									
                                </a>
								<p>{{i.descriptionevenement}}</p>
								
                                
								
                                <ul class="blog-info-link">
                                    <li>Lieu : <a href="#"><i class="far fa-user"></i> {{i.lieuevenement}} </a></li>
									<li>Nombre de places : <a href="#"><i class="far fa-user"></i> {{i.nbrdeplaces}} </a></li>
									<li>Type de l'évenement : <a href="#"><i class="far fa-user"></i> {{i.type}} </a></li>

									
						<a  href="{{path('addR') }}" >
												
							<span class="badge badge-success"> <h6>Cliquez pour résérver</h6> </span>
								
						</a>
						
                                    
                                </ul>
                            </div>
                        </article>
						{% endfor %}

                       
                        
                    </div>
                </div>
                
                                
                        </aside>
					
                        
						
                       

                        <aside class="single_sidebar_widget newsletter_widget">
                            <h4 class="widget_title">Newsletter</h4>

                            <form action="#">
                                <div class="form-group">
                                    <input type="email" class="form-control" onfocus="this.placeholder = ''"
                                        onblur="this.placeholder = 'Enter email'" placeholder='Enter email' required>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1"
                                    type="submit">Subscribe</button>
                            </form>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
   	
{% endblock %}

