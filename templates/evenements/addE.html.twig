{% extends "dashboard.html.twig" %}
{% form_theme f 'bootstrap_4_layout.html.twig' %}



{% block body %}
<div class="col-lg-10 mx-auto">
	<div class="card mb-4">
		<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
			<h6 class="m-0 font-weight-bold text-primary">Ajouter événement</h6>
		</div>
		<div class="card-body">
			{{ form_start(f, {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="form-group">
				{{form_label(f.NomEvenement,"Nom de l'événement " )}}
				{{form_widget(f.NomEvenement,{'attr': {'class': 'form-control', 'placeholder': ' Nom Evenement', 'id': 'exampleFormControlTextarea1', }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.type,"Type de l'événement " )}}
				{{form_widget(f.type,{'attr': {'class': 'form-control', 'placeholder': ' Nom Evenement', 'id': 'exampleFormControlTextarea1', }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.DescriptionEvenement,"Description de l'événement" )}}
				{{form_widget(f.DescriptionEvenement,{'attr': {'class': 'form-control', 'placeholder': 'Description', 'id': 'exampleFormControlTextarea1', }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.LieuEvenement,"Lieu de l'événement" )}}
				{{form_widget(f.LieuEvenement,{'attr': {'class': 'form-control', 'id': 'touchSpin3','placeholder': 'Lieu' }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.NbrDePlaces,"Nombre de places" )}}
				{{form_widget(f.NbrDePlaces,{'attr': {'class': 'form-control', 'placeholder': 'Nombre de places', }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.DateEvenement,"Date de l'événement" )}}
				{{form_widget(f.DateEvenement,{'attr': {'class': 'form-control', 'placeholder': 'Date', }}) }}
				
			</div>
			<div class="form-group">
				{{form_label(f.Heure,"Heure de l'événement" )}}
				{{form_widget(f.Heure,{'attr': {'class': 'form-control', 'placeholder': 'Date', }}) }}
				
			</div>
			<div class="form-group">
						<div class="custom-file">

							{{ form_widget(f.Image, { 'attr': {'class': 'custom-file-input', 'id': 'customFile'} }) }}
							{{ form_label(f.Image, 'Choose file', { 'label_attr': {'class': 'custom-file-label'} }) }}
											
						</div>
					</div>


			
			{{ form_widget(f.save, { 'attr': {'class': 'btn btn-primary'} }) }}
			
			{{form_end(f)}}
		</div>
	</div>

{% endblock %}


