{% extends 'dashboard.html.twig' %}
{% block body %}
<div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Actualités</h1>
            <td><a href="addArticle" class="btn btn-sm btn-primary">Ajouter Article </a></td>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="./">Home</a></li>
              <li class="breadcrumb-item">Forum</li>
              <li class="breadcrumb-item active" aria-current="page">Actualités</li>
            </ol>
          </div>
          <div class="row">
            <div class="col-lg-12 mb-4">
              <!-- Liste des actualités -->
              <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Liste des articles</h6>
                </div>
                <div class="table-responsive">
                  <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                     
                      <tr>
                        <th>Id_article</th>
                          <th>ID_user</th>
                          <th>article</th>
                        
                          <th>Date</th>
                          <th>Modification</th>
                          <th>Suppression</th>
                       
                                  
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                     </tr>
                      <tr>
                        <tr>
                        
                   {% for i in forum %}
                <tr>
                   <td>{{i.id}}</td>
                    <td>{{i.IDUser}}</td>
                    <td>{{i.article}}</td>
                     <td> {{i.createdAT | date("Y-m-d H:i:s")}}</td>
                     
                       <td><a href={{path('updateArticle',{'id':i.id }) }} class="btn btn-sm btn-primary">Modifier Article </a></td>
                     
    <td><a href="{{path('suppArticle',{'id':i.id }) }}" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                  </a></td>
                    
                      {% endfor %}
                </tr>
  



                
                
   
    
                  
                 
                
         
    
          
               
                     
                    </tbody>
                  </table>
                </div>

{% endblock %}