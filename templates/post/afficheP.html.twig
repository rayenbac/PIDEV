{% block body %}
<section class="breadcrumb_part breadcrumb_bg">
        
          
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Forum</h2>
                        </div>
                    </div>
                </div>
            
        
    </section>
   <!doctype html>
<html lang="en">

<head>
<div id="google_translate_element"></div>
                                    <script type="text/javascript">
                                        function googleTranslateElementInit() {
                                            new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
                                        }
                                    </script>

                                    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                              
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>medical</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- themify CSS -->
    <link rel="stylesheet" href="css/themify-icons.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="css/flaticon.css">
    <!-- magnific popup CSS -->
    <link rel="stylesheet" href="css/magnific-popup.css">
    <!-- nice select CSS -->
    <link rel="stylesheet" href="css/nice-select.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <!-- about us part start-->
    <section class="about_us single_about_padding">
    </section>
    <!-- about us part end-->

    <!-- our depertment part start-->

     <section class="our_depertment section_padding">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-xl-12">
                    <div class="depertment_content">
                        <div class="row justify-content-center">
                            <div class="col-xl-8">
                                <h3>علاخاطر صحتك
 تهمنا</h3>
                                <a class="btn btn-lg btn-block btn-success rounded-0 py-4 mb-3 bg-op-6 roboto-bold" href="{{path('addP') }}">Poser Question</a>
                                 
                               
                                <h6>Liste questions&Réponses</h6>
                               
                                {% for i in forum  |sort((a, b) => a.rate - b.rate)|reverse %}
                               
                                <div class="row">
                                <div id="google_translate_element"></div>
                                    <script type="text/javascript">
                                        function googleTranslateElementInit() {
                                            new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
                                        }
                                    </script>

                                    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                              
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="single_our_depertment">
                                            <span class="our_depertment_icon"><img src="img/icon/feature_2.svg"
                                                    alt=""></span>
                                                   
                                                {% set flashbag_notices = app.session.flashbag.get('notices') %}
                                 {% if flashbag_notices is not empty %}
                                 <ul class ="flashy--success">
                                 {% for notice in flashbag_notices %}
                                 <li>{{ notice }}</li>
                                 {% endfor %}
                                 <ul>
                                 {% endif %}
                                            <h4>Question : {{i.id}}</h4>
                                            <p>{{i.publication}} </p>
                                            
                                             <a href={{path('app_rate',{'id':i.id}) }} class="text-danger">&#x2605; </a> 
                                           
                                                
                                             {% if i.rate is not empty %}
                                            {{i.rate}}Rate(s)
                                            {% else %}
                                              0 Rate
                                            {% endif %}
                            

                                           
                                            <p><td><a href={{path('app_likes',{'id':i.id}) }} class="text-danger">&#128077;  </a>
                                            {% if i.Likes is not empty %}
                                            {{i.Likes}}like(s)
                                            {% else %}
                                              0 like
                                            {% endif %}
                            
                                            <p><td><a href={{path('app_dislikes',{'id':i.id}) }} class="text-danger">&#128078; </a>
                                            {% if i.Dislike is not empty %}
                                            {{i.Dislike}}dislike(s)
                                            {% else %}
                                              0 dislike
                                            {% endif %}
                                            
                                            
                                            
                                            </td> </p>
                                            
                                            
                                             <td><a href={{path('afficheReponse',{'id':i.id}) }} class="btn btn-sm btn-primary">Voir réponse </a></td>
                                             
                                            
                                           
                                        </div>
                                    </div>
                                    
                
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="single_our_depertment">
                                            <span class="our_depertment_icon"><img src="img/icon/feature_2.svg"
                                                    alt=""></span>
                                            <h4>Informations</h4>
                                             
                                              <p>Publié le {{ i.updatedAt | date("Y-m-d H:i:s") }} , par {{i.NomUtilisateur }}.</p>
                                              <td><a href={{path('updatePost',{'id':i.id}) }} class="btn btn-sm btn-primary">Modifier question </a></td>
                                              <td><a href={{path('suppPost',{'id':i.id }) }} class="btn btn-sm btn-primary">Supprimer question </a></td>
                                             
                                             
                                                                                  
                                                                                  
                                        
                                    </div>
                                   </div> 
                                </div>
                                {% endfor %}
                                
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</html>

    



        
                       
        

   

                
{% endblock %}